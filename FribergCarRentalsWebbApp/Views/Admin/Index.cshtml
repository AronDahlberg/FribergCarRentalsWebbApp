@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container d-flex flex-column align-items-center" style="position: absolute; top: 40%; left: 50%; transform: translate(-50%, -50%);">
    <h1>@ViewData["Title"]</h1>
    <div class="row align-items-center">
        <hr style="border: none; border-top: 1px solid #888; margin: 3rem 0;">
        <div class="col d-flex align-items-center justify-content-center">
            <div class="d-flex gap-5">
                <a class="btn btn-primary btn-lg" asp-controller="Booking" asp-action="Index">Cars</a>
                <a class="btn btn-primary btn-lg" asp-controller="Admin" asp-action="Customers">Customers</a>
                <a class="btn btn-primary btn-lg" asp-controller="Admin" asp-action="Bookings">Bookings</a>
            </div>
        </div>
    </div>
</div>
