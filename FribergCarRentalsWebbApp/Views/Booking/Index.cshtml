@model IEnumerable<FribergCarRentalsWebbApp.Models.CarWithPriceViewModel>
@{
    ViewData["Title"] = "All Cars";
}

<div class="row justify-content-start align-items-center">
   <div class="col-auto">
       <img src="~/images/FribergCarRentalsLogo.png" alt="Logo" width="125" height="125" class="img-fluid">
   </div>
   <div class="col-auto d-flex flex-column justify-content-center ms-3">
       <h1 class="display-4">@ViewData["Title"]</h1>
       <p class="lead">Choose a car to rent</p>
   </div>
</div>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@item.Car.Name</h5>
                        <p class="card-text">
                            @if (!string.IsNullOrEmpty(item.Car.Description))
                            {
                                @(item.Car.Description.Length > 50 
                                    ? item.Car.Description.Substring(0, 50) + "..." 
                                    : item.Car.Description)
                            }
                        </p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="text-muted">$@item.Price.DailyPrice/day</span>
                            <a href="#" class="btn btn-primary">See More</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
